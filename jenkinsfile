pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/Sharathsowmi/Jenkinsandjava.git'
        AWS_REGION = 'ap-south-1'
        ECR_PUBLIC_REPO_URI = 'public.ecr.aws/u0z3u9i4/docker/testimage'
        IMAGE_TAG = 'latest'
        IMAGE_URI = "${ECR_PUBLIC_REPO_URI}:${IMAGE_TAG}"
    }

    stages {
        stage('Install AWS CLI') {
            steps {
                sh '''
                    set -e
                    echo "Installing AWS CLI..."
                    sudo apt update && sudo apt install -y unzip curl
                    curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
                    rm -rf aws
                    unzip -q awscliv2.zip
                    sudo ./aws/install --update
                    aws --version
                '''
            }
        }

        stage('Clone Repository') {
            steps {
                git url: "${GIT_REPO}", branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh '''
                    echo "Building Java application..."
                    mvn clean -B -Denforcer.skip=true package
                '''
            }
        }

        stage('Login to AWS ECR') {
            steps {
                withAWS(credentials: 'Dockerimage', region: 'ap-south-1') {
                    sh '''
                        aws ecr-public get-login-password \
                        --region ap-south-1 | docker login \
                        --username AWS --password-stdin public.ecr.aws/u0z3u9i4
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "Building Docker image..."
                    docker build -t ${IMAGE_URI} .
                '''
            }
        }

        stage('Push Docker Image to ECR') {
            steps {
                sh '''
                    echo "Pushing Docker image to ECR..."
                    docker push ${IMAGE_URI}
                '''
            }
        }
    }

    post {
        success {
            echo "Docker image pushed to ECR successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
